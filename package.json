{
  "name": "settings-extension",
  "version": "1.1.0",
  "description": "A comprehensive Manifest V3 browser extension framework for robust settings management across Chrome and Firefox browsers",
  "main": "background.js",
  "scripts": {
    "dev": "concurrently \"npm run watch\" \"npm run serve\"",
    "watch": "node scripts/build.js --watch",
    "build": "node scripts/build.js",
    "build:firefox": "node scripts/build.js --firefox",
    "serve": "web-ext run --source-dir=dist --start-url=about:debugging",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:chrome": "web-ext run --target=chromium --source-dir=dist",
    "test:firefox": "web-ext run --target=firefox-desktop --source-dir=dist",
    "test:all": "npm run test:chrome && npm run test:firefox",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "rimraf dist web-ext-artifacts",
    "dist": "npm run build && npm run package:chrome && npm run package:firefox",
    "package": "npm run build && web-ext build --source-dir=dist",
    "package:chrome": "npm run build && web-ext build --source-dir=dist --filename=settings-extension-chrome.zip --overwrite-dest",
    "package:firefox": "npm run build:firefox && web-ext build --source-dir=dist --filename=settings-extension-firefox.xpi --overwrite-dest",
    "validate": "web-ext lint --source-dir=dist",
    "icons": "node scripts/generate-icons.js",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/settings-extension.git"
  },
  "keywords": [
    "browser-extension",
    "settings",
    "manifest-v3",
    "chrome",
    "firefox",
    "webextension",
    "configuration",
    "storage",
    "cross-browser"
  ],
  "author": "Settings Extension Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/settings-extension/issues"
  },
  "homepage": "https://github.com/yourusername/settings-extension#readme",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/chrome": "^0.0.250",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "sharp": "^0.34.3",
    "web-ext": "^7.8.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
