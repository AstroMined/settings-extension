{
  "manifest_version": 3,
  "name": "Your Extension Name",
  "version": "1.0.0",
  "description": "Description of your extension with settings management",
  
  "author": "Your Name",
  "homepage_url": "https://your-website.com",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "tabs"
  ],

  "optional_permissions": [
    "bookmarks",
    "history",
    "contextMenus"
  ],

  "host_permissions": [
    "https://*.example.com/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension@your-domain.com",
      "strict_min_version": "109.0"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/browser-compat.js",
        "lib/content-settings.js",
        "content-script.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Your Extension Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open extension popup"
    },
    "toggle_feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Toggle main feature on/off"
    },
    "quick_settings": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open quick settings overlay"
    }
  },

  "web_accessible_resources": [
    {
      "resources": [
        "config/defaults.json",
        "assets/images/*.png",
        "assets/styles/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "externally_connectable": {
    "matches": [
      "https://your-website.com/*",
      "https://*.your-domain.com/*"
    ]
  }
}